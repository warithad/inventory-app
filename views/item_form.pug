extends layout 

block content 
    h1 #{title}
    form(method='POST' action='')
        div.form-group
            label(for='name') Name: 
            input#name.form-control(type='text', placeholder='Name of Item' name='name' required='true' value=(undefined===item ? '' : item.name))
        div.form-group 
            label(for='price') Price: 
            input#price.form-control(type='number' name='price' required='true' min='1' value=(undefined===item ? '' : item.price))
        div.form-group 
            label(for='numberInStock') In Stock: 
            input#numberInStock.form-control(type='number' name='numberInStock' required='true' min='0' value=(undefined===item ? '' : item.numberInStock))
        div.form-group 
            label(for='description') Description: 
            textarea#description.form-control(type='text' name='description' placeholder='Description' value=(undefined===item ? '' : item.description)) 
        div.form-group 
            label Category:
            div
                for category in category_list 
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
                        label(for=category._id) #{category.name}
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg